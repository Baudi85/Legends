{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.soldier_camp.generic": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "active": "query.variant == 1"
                        }
                    ],
                    "animations": [
                        "idle"
                    ]
                },
                "active": {
                    "transitions": [
                        {
                            "default": "query.variant == 0"
                        }
                    ],
                    "animations": [
                        "idle", "activated"
                    ]
                }
            }
        }
    }
}